<p style="color: green"><%= notice %></p>

<h1>
Title:
<%= @item.title %>
</h1>

<h2>
Priority:
<%= @item.priority %>
</h2>

<h2>
Deadline:
<%= @item.deadline %>
</h2>
 
<h2>
<% completed_text = @item.completed_at ? "Completed at: #{@item.completed_at}" : "Completed" %>
<%= @item.completed ? completed_text : "Incompleted" %>
</h2>
   
<div>
  <% if !@item.completed %>
    <%= link_to "Edit this item", edit_list_item_path(@list, @item) %> |
    <%= button_to "Mark as completed", complete_list_item_path(@list, @item), method: :put %> |
  <% end %>

  
  <%= link_to "Back to list", list_path(@list)%>
  <%= button_to "Destroy this item", list_item_path(@list, @item), method: :delete %>
</div>
