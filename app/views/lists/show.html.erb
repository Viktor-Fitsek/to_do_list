<p style="color: green"><%= notice %></p>

<%= render @list %>

<table>
  <tr>
    <td>Title</td>
    <td>Priority</td>
    <td>Deadline</td>
  </tr>

  <% @items.each do |item| %>
    <tr>
      <%= render item %>
    </tr>
  <% end %>
  
</table>


<div>
  <%= link_to "Edit this list", edit_list_path(@list) %> 
  <%= link_to "Create new item", new_list_item_path(@list) %>|
  <%= link_to "Back to lists", lists_path %>
  <%= button_to "Destroy this list", @list, method: :delete %>
</div>
